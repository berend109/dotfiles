general {
    colors = false
    interval = 1
}

# display order

order += "disk /"

order += "wireless _first_"

order += "ethernet _first_"

order += "load"

order += "memory"

order += "cpu_usage"

order += "cpu_temperature 0"

order += "battery 1"

order += "tztime local"

Order += "volume master"

# display calls

wireless _first_ {
    format_up = "W: %quality %essid - %ip"
    format_down = "W: down"
}

ethernet _first_ {
    # if you use %speed, i3status requires root privileges
    format_up = "E: %ip (%speed)"
    format_down = "E: down"
}

battery 1 {
	format = "%status %percentage %remaining %emptytime"
	path = "/sys/class/power_supply/BAT0/uevent"
	status_chr = "âš¡ CHR"
	status_bat = "ðŸ”‹ BAT"
	status_unk = "? UNK"
	status_full = "â˜» FULL"
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S"
}

load {
    format = "load: %1min"
}

cpu_usage {
    format = "CPU: %usage"
}

cpu_temperature 0 {
    format = "T: %degrees Â°C"
}

memory {
	format = "RAM: Used: %used - Total: %total"
	threshold_degraded = "10%"
	format_degraded = "MEMORY: %free"
}

disk "/" {
    format = "Disk: %avail %percentage_free free"
}

