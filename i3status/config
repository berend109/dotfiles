general {
    colors = true
    interval = 1
}

# display order

order += "disk /"

order += "ipv6"

order += "wireless _first_"

order += "ethernet _first_"

order += "load"

order += "cpu_usage"

order += "cpu_temperature 0"

order += "battery 1"

order += "tztime local"

order += "volume master"

# display calls

wireless _first_ {
    format_up = "W: (%quality at %essid) %ip"
    format_down = "W: down"
}

ethernet _first_ {
    # if you use %speed, i3status requires root privileges
    format_up = "E: %ip (%speed)"
    format_down = "E: down"
}

battery 1 {
    format = "%status %percentage %remaining"
    path = "/sys/class/power_supply/BAT0/uevent"
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S"
}

load {
    format = "load: %1min"
}

cpu_usage {
    format = "CPU: %usage"
}

cpu_temperature 0 {
    format = "T: %degrees °C"
}

disk "/" {
    format = "%avail"
}

volume master {
    format = "♪: %volume"
    format_muted = "♪: muted (%volume)"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}
